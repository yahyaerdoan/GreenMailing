@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
@await Component.InvokeAsync("_HeadComponentPartial")
<body>
    <!-- start loader -->
    <div id="pageloader-overlay" class="visible incoming">
        <div class="loader-wrapper-outer">
            <div class="loader-wrapper-inner">
                <div class="loader"></div>
            </div>
        </div>
    </div>
    <!-- end loader -->
    <!-- Start wrapper-->
    <div id="wrapper">
        <!--Start sidebar-wrapper-->
        <div id="sidebar-wrapper" data-simplebar="" data-simplebar-auto-hide="true">
            <div class="brand-logo">
                <a href="/Inbox/Index">
                    <img src="~/template/vertical-layout/assets/images/logo-icon.png" class="logo-icon" alt="logo icon">
                    <h5 class="logo-text">Green Mailing</h5>
                </a>
            </div>
            @await Component.InvokeAsync("_UserDetailsComponentPartial")
            <ul class="sidebar-menu">
                <li class="sidebar-header">MAIN NAVIGATION</li>
                @await Component.InvokeAsync("_MailBoxComponentPartial")
                @await Component.InvokeAsync("_CalendarComponentPartial")
            </ul>
        </div>
        <!--End sidebar-wrapper-->
        <!--Start topbar header-->
        <header class="topbar-nav">
            <nav id="header-setting" class="navbar navbar-expand fixed-top">
                @await Component.InvokeAsync("_SearchBarComponentPartial")
                <ul class="navbar-nav align-items-center right-nav-link">
                    @await Component.InvokeAsync("_NewMessageCountComponentPartial")
                    @await Component.InvokeAsync("_UserProfileDetailsComponentPartial")
                </ul>
            </nav>
        </header>
        <!--End topbar header-->
        <div class="clearfix"></div>
        <div class="content-wrapper">
            <div class="container-fluid">
                <!--Start Dashboard Content-->
                @RenderBody()
                <!--End Dashboard Content-->
                <!--start overlay-->
                <div class="overlay toggle-menu"></div>
                <!--end overlay-->
            </div>
            <!-- End container-fluid-->
        </div>
        <!--End content-wrapper-->
        <!--Start Back To Top Button-->
        <a href="javaScript:void();" class="back-to-top"><i class="fa fa-angle-double-up"></i> </a>
        <!--End Back To Top Button-->
        <!--Start footer-->
        @await Component.InvokeAsync("_FooterComponentPartial")
        <!--End footer-->
        <!--start color switcher-->
        @await Component.InvokeAsync("_RightSideColorComponentPartial")
        <!--end color switcher-->
    </div>
    <!--End wrapper-->
    <!-- Bootstrap core JavaScript-->
    @await Component.InvokeAsync("_ScriptComponentPartial")
</body>
</html>